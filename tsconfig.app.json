{
  "compilerOptions": {
    "target": "ES2020",                         // Target JavaScript version
    "useDefineForClassFields": true,            // Use 'define' for class fields
    "lib": ["ES2020", "DOM", "DOM.Iterable"],    // Include standard library files
    "module": "ESNext",                         // Module system to use
    "skipLibCheck": true,                       // Skip type checking of declaration files

    /* Bundler mode settings */
    "moduleResolution": "bundler",              // Use bundler for module resolution
    "allowImportingTsExtensions": true,         // Allow importing TypeScript files
    "isolatedModules": true,                    // Ensure files can be safely transpiled
    "moduleDetection": "force",                 // Force module detection
    "noEmit": true,                             // Do not emit output files

    /* JSX settings */
    "jsx": "react-jsx",                         // Use the new JSX transform
    "strict": true,                             // Enable all strict type-checking options
    "noUnusedLocals": true,                     // Report errors on unused local variables
    "noUnusedParameters": true,                 // Report errors on unused function parameters
    "noFallthroughCasesInSwitch": true          // Report errors on fallthrough cases in switch statements
  },
  "include": ["src"]                            // Include the 'src' directory in the project
}
